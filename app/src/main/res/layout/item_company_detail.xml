<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="18dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_build" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_background_color"
            tools:text="公司名称" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="14dp"
            android:background="@color/gray"></View>

        <TextView
            android:id="@+id/tv_build_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@mipmap/ic_company_name"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color"
            tools:text="紫禁山商务大厦" />

        <TextView
            android:id="@+id/tv_comunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/ic_shequ"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color"
            tools:text="同乐社区" />

        <TextView
            android:id="@+id/tv_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/ic_type"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color"
            tools:text="制作业" />

        <TextView
            android:id="@+id/tv_contactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/ic_phone"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color"
            tools:text="0371-2598648" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/ic_remark"
            android:drawablePadding="10dp"
            android:textColor="@color/base_color"
            tools:text="这个是数据类型" />
    </LinearLayout>
</LinearLayout>