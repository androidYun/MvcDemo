<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lgy.mvcdemo.view.NaviTitleView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="@string/app_name"></com.lgy.mvcdemo.view.NaviTitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/default_background_color"
        android:gravity="center"
        android:orientation="vertical">

        <com.lgy.mvcdemo.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="83dp"
            android:layout_height="83dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/default_background_color"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view_top"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_company_data"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="今日新增企业"
                    android:textColor="@color/comopany_num"
                    android:textSize="11dp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="本周新增企业"
                    android:textColor="@color/comopany_num"
                    android:textSize="11dp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="本月新增企业"
                    android:textColor="@color/comopany_num"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_day_add_company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/today_add_compamy_num"
                    android:textSize="11dp"
                    tools:text="15" />

                <TextView
                    android:id="@+id/tv_week_add_company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/week_month_add_compamy_num"
                    android:textSize="11dp"
                    tools:text="105" />

                <TextView
                    android:id="@+id/tv_month_add_company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/week_month_add_compamy_num"
                    android:textSize="11dp"
                    tools:text="320" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_notice"
                android:gravity="center_horizontal"
                android:text="通知公告" />

            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_rule"
                android:gravity="center_horizontal"
                android:text="政法法规" />

            <TextView
                android:id="@+id/tv_add_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_add_company"
                android:gravity="center_horizontal"
                android:text="添加企业" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_search_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_search_company"
                android:gravity="center_horizontal"
                android:text="查询企业" />

            <TextView
                android:id="@+id/tv_build_infor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_build_infor"
                android:gravity="center_horizontal"
                android:text="楼宇信息" />

            <TextView
                android:id="@+id/tv_set"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:drawableTop="@mipmap/ic_set"
                android:gravity="center_horizontal"
                android:text="系统设置" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
